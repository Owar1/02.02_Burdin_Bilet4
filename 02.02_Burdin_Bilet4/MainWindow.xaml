<Window x:Class="_02._02_Burdin_Bilet4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Калькулятор стоимости жалюзи" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ширина -->
        <Label Grid.Row="0" Grid.Column="0" Content="Ширина (м):" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtWidth" Grid.Row="0" Grid.Column="1" Margin="5" Height="25" Text="1.0"/>

        <!-- Высота -->
        <Label Grid.Row="1" Grid.Column="0" Content="Высота (м):" Margin="0,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtHeight" Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="1.0"/>

        <!-- Материал -->
        <Label Grid.Row="2" Grid.Column="0" Content="Материал:" Margin="0,5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
            <RadioButton x:Name="rbAluminum" Content="Алюминий (15.50 руб/м²)" 
                        IsChecked="True" GroupName="Material" Margin="0,2"/>
            <RadioButton x:Name="rbPlastic" Content="Пластик (9.90 руб/м²)" 
                        GroupName="Material" Margin="0,2"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
            <Button x:Name="btnCalculate" Content="Рассчитать" 
                    Width="120" Height="30" Margin="5" Click="btnCalculate_Click"/>
            <Button x:Name="btnGenerateReceipt" Content="Оформить квитанцию" 
                    Width="150" Height="30" Margin="5" Click="btnGenerateReceipt_Click"/>
        </StackPanel>

        <!-- Результат расчета -->
        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Результат расчета:" FontWeight="Bold" Margin="0,10,0,5"/>
        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="LightGray" BorderThickness="1" 
                Background="White" Padding="10" Margin="0,0,0,10">
            <TextBlock x:Name="txtResult" TextWrapping="Wrap">
                Введите размеры и нажмите "Рассчитать"
            </TextBlock>
        </Border>

        <!-- Информация о сохраненных чеках -->
        <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="LightBlue" BorderThickness="1" 
                Background="#F0F8FF" Padding="5" Margin="0,5">
            <TextBlock x:Name="txtReceiptInfo" TextWrapping="Wrap" FontSize="11">
                Чеки сохраняются на Рабочий стол в формате: Номер_дата_стоимость.txt
            </TextBlock>
        </Border>
    </Grid>
</Window>